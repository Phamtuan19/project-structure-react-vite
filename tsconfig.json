{
   "compilerOptions": {
      "target": "ES2022",
      "allowJs": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-jsx",
      "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
      "module": "ESNext",
      "moduleDetection": "force",
      "moduleResolution": "Bundler",
      "noEmit": true,
      "noUncheckedIndexedAccess": true,

      "paths": {
         "@app": ["src/app"],
         "@app/*": ["src/app/*"],

         "@assets/*": ["src/assets/*"],

         "@hooks": ["src/hooks"],
         "@hooks/*": ["src/hooks/*"],

         "@components": ["src/components"],
         "@components/*": ["src/components/*"],

         "@constants": ["src/constants"],
         "@constants/*": ["src/constants/*"],

         "@helpers": ["src/helpers"],
         "@helpers/*": ["src/helpers/*"],

         "@language": ["src/language"],
         "@language/*": ["src/language/*"],

         "@pages": ["src/pages"],
         "@pages/*": ["src/pages/*"],

         "@store": ["src/store"],
         "@store/*": ["src/store/*"],

         "@routes": ["src/routes"],
         "@routes/*": ["src/routes/*"],

         "@styles": ["src/styles"],
         "@styles/*": ["src/styles/*"],

         "@types": ["src/types"],
         "@types/*": ["src/types/*"],

         "@utils": ["src/utils"],
         "@utils/*": ["src/utils/*"],

         "~/*": ["src/*"]
      },

      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "strictNullChecks": true,
      "types": ["vite/client", "vite-plugin-svgr/client"],
      "verbatimModuleSyntax": true
   },
   "exclude": ["node_modules", "vite.config.ts"],
   "include": ["**/*.ts", "**/*.tsx"],
   "references": [{ "path": "./tsconfig.node.json" }]
}
